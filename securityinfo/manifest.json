{

  "description": "Adds a browser action icon to the toolbar. Click the button to got to the page with certificate info",
  "manifest_version": 2,
  "name": "SecurityInfo",
  "version": "1.0",
  
  "permissions": ["webRequest", "webRequestBlocking", "<all_urls>"],
  
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/page-16.png",
      "32": "icons/page-32.png"
    }
  }

}
